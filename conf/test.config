/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.
----------------------------------------------------------------------------------------
*/

singularity {
    enabled = true
    autoMounts = true
    cacheDir = params.image_cachedir
    runOptions = '--cleanenv --no-home'
}
process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
    executor = 'local'
    errorStrategy = { task.exitStatus in ((130..145) + 104 ) ? 'retry' : 'finish' }
    maxRetries = 3

    withName: mSigHdp {
        container = 'ar39944/msighdp_amd64:0.0.2'
    }
    withName: SigProfilerAssignment {
        container = 'ar39944/sigprofilerassignment_amd64:0.0.2'
    }
    withName: SigProfilerPlotting {
        container = 'phuongle2510/sigprofiler_plotting:1.3.24'
    }

}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'
}